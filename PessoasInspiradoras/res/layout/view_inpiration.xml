<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/componentInspirationView">
    
    <LinearLayout 
        android:id="@+id/inspiration_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
	    <ImageView 
	        android:id="@+id/inspiration_marker"
	        android:layout_width="48dp"
        	android:layout_height="48dp"
        	android:src="@drawable/logo"        	
        	android:layout_gravity="center_vertical"
	        />
	    
	    <TextView 
	        android:id="@+id/inspiration"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:textStyle="italic"
	        android:textColor="#888"	        
        	android:layout_marginTop="5dp"
        	android:layout_marginBottom="5dp"/>	    
    
    </LinearLayout>
    
     <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"        
        android:background="#ddd"
        android:layout_marginTop="12dp"
        android:layout_below="@id/inspiration_container"/> 
    
    <RelativeLayout
        android:id="@+id/inside_menu_inspiration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/bt_back_inpiration"
            android:src="@drawable/content_undo"
            android:layout_width="48dp"
        	android:layout_height="48dp"
        	android:layout_marginLeft="15dp"
        	android:layout_marginRight="15dp"    	
            />
        <ImageView
            android:id="@+id/bt_edit_inpiration"
            android:src="@drawable/content_edit"
            android:layout_width="48dp"
        	android:layout_height="48dp"
        	android:layout_marginLeft="15dp"
        	android:layout_marginRight="15dp"
        	android:layout_toRightOf="@id/bt_back_inpiration"	
            />
        <ImageView
            android:id="@+id/bt_delete_inspiration"
            android:src="@drawable/content_discard"
            android:layout_width="48dp"
        	android:layout_height="48dp"
        	android:layout_marginLeft="15dp"
        	android:layout_marginRight="15dp"
        	android:layout_toRightOf="@id/bt_edit_inpiration"
            />
        <ImageView
            android:id="@+id/bt_share_inspiration"
            android:src="@drawable/content_share"
            android:layout_width="48dp"
        	android:layout_height="48dp"
        	android:layout_marginLeft="15dp"
        	android:layout_marginRight="15dp"
        	android:layout_toRightOf="@id/bt_delete_inspiration"
            />
    </RelativeLayout>
    
</RelativeLayout>
