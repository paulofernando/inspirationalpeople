<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:id="@+id/componentInspirationView"
    android:background="@drawable/textview_rounded">
    
    <TextView 
        android:id="@+id/inspiration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#222"/>
    
    <RelativeLayout
        android:id="@+id/inside_menu_inspiration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/bt_back_inpiration"
            android:src="@drawable/content_undo"
            android:layout_width="48dp"
        	android:layout_height="48dp"
        	android:layout_marginLeft="15dp"
        	android:layout_marginRight="15dp"    	
            />
        <ImageView
            android:id="@+id/bt_edit_inpiration"
            android:src="@drawable/content_edit"
            android:layout_width="48dp"
        	android:layout_height="48dp"
        	android:layout_marginLeft="15dp"
        	android:layout_marginRight="15dp"
        	android:layout_toRightOf="@id/bt_back_inpiration"	
            />
        <ImageView
            android:id="@+id/bt_delete_inspiration"
            android:src="@drawable/content_discard"
            android:layout_width="48dp"
        	android:layout_height="48dp"
        	android:layout_marginLeft="15dp"
        	android:layout_marginRight="15dp"
        	android:layout_toRightOf="@id/bt_edit_inpiration"
            />
    </RelativeLayout>
    
</RelativeLayout>
