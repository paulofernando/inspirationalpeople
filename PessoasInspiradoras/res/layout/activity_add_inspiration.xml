<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff">
    
    <LinearLayout
        android:id="@+id/buttons_add_inspiration"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_horizontal"
		android:weightSum="1"
		android:layout_alignParentBottom="true"
		>     
	     <Button
	          android:id="@+id/bt_add_inpiration_cancel" 
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"       
	          android:background="@drawable/button_background"
	          android:text="@string/bt_cancel"
	          android:textColor="#222"
	          android:textSize="14sp"
	          android:layout_margin="12dp"	          
	          android:padding="15dp"
	          android:layout_weight="0.5"/>
	    <Button
	          android:id="@+id/bt_add_inspiration_save" 
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"            
	          android:background="@drawable/button_background"
	          android:text="@string/bt_save"
	          android:textColor="#222"
	          android:textSize="14sp"
	          android:padding="15dp"
	          android:layout_margin="12dp"
	          android:layout_weight="0.5"/>			    
	 </LinearLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttons_add_inspiration">

        <LinearLayout
            android:id="@+id/layout_add_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            
            android:orientation="vertical" >
            
		    <EditText
		        android:id="@+id/et_add_inspiration"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:lines="5"
		        android:gravity="top"
		        android:textColor="#333"
		        />
		  
        </LinearLayout>
    </ScrollView>    
    
</RelativeLayout>
